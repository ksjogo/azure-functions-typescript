{
    "compilerOptions": {
        "target": "es6",
        "outDir": "build",
        "moduleResolution": "node",
        "sourceMap": false,
        "removeComments": true,
        "alwaysStrict": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/*.ts"
    ]
}
